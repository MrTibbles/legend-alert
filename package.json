{
  "name": "legend-alert",
  "version": "0.0.1",
  "description": "Apex Legends player stats tracker",
  "main": "src/index.js",
  "keywords": [
    "Linaria",
    "Now",
    "Apex Legends",
    "Apex Legends API",
    "Apollo Server"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "repository": "https://github.com/MrTibbles/legend-alert",
  "author": "@mrtibbles",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.5.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@raddad/eslint-config": "0.0.7",
    "@types/react": "^16.9.1",
    "@types/react-dom": "^16.8.5",
    "@types/react-router-dom": "^4.3.4",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "core-js": "^3.1.4",
    "css-loader": "^2.1.1",
    "cypress": "^3.4.1",
    "dotenv": "^8.0.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "file-loader": "^4.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.4.0",
    "lint-staged": "^9.2.1",
    "mini-css-extract-plugin": "^0.7.0",
    "now": "^16.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.1",
    "source-map-loader": "^0.2.4",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "typescript": "^3.5.3",
    "wait-on": "^3.3.0",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "workbox-webpack-plugin": "^4.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "stylelint",
      "prettier --write",
      "eslint --fix",
      "tsc --noEmit",
      "git add"
    ]
  },
  "scripts": {
    "dev:client": "webpack-dev-server",
    "dev:server": "node src/server/index.js",
    "dev:type-check": "tsc --noEmit --watch",
    "lint:styles": "stylelint \"src/client/**/*.js\"",
    "lint:prettier": "prettier --write \"src/**/*.{js,ts,tsx}\"",
    "lint:eslint": "eslint --fix \"src/**/*.{js,ts,tsx}\"",
    "lint": "npm-run-all --sequential lint:*",
    "start:dev": "npm-run-all --parallel dev:*",
    "ci:ping-api": "curl -X POST -H \"Content-Type: application/json\" --data '{ \"query\": \"{ ping { pong } }\" }' http://localhost:3000/graphql",
    "ci:ping-static": "wait-on http-get://localhost:3000 --delay 10000",
    "ci:ping-servers": "npm-run-all --sequential ci:ping-static ci:ping-api",
    "ci:lint": "scripts/static-analysis.sh",
    "ci:type-check": "tsc --noEmit",
    "cy:open": "cypress open --env API_URL=http://localhost:4000",
    "cy:verify": "cypress verify",
    "ci:serve": "CI_ENV=true now dev",
    "build": "tsc --noEmit && NODE_ENV=production webpack",
    "test": "cypress run --record --key f8b075fe-ce9f-4712-ad42-96c913b58cf6 --env API_URL=http://localhost:4000/",
    "test:ci": "cypress run --record --key f8b075fe-ce9f-4712-ad42-96c913b58cf6 --env API_URL=http://localhost:3000/graphql"
  },
  "dependencies": {
    "apollo-datasource-rest": "^0.6.1",
    "apollo-server": "^2.25.4",
    "apollo-server-micro": "^2.8.1",
    "graphql": "^14.4.2",
    "linaria": "^1.4.0-alpha.1",
    "localforage": "^1.7.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.1",
    "whatwg-fetch": "^3.0.0"
  }
}
